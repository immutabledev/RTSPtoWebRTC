    "platform",
    "plugins",
    "processorCores",
    "screenResolution",
    "sessionStorage",
    "timezoneOffset",
    "touchSupport",
    "userAgent",
    "webGl"
  ];

  imprint.test(browserTests).then(function(result){
    openSocket(result);
  });
  </script>
